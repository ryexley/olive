{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web"
    ]
  },
  "scripts": {
    "lint": "eslint api web --cache",
    "test": "jest"
  },
  "devDependencies": {
    "@redwoodjs/core": "^0.4.0",
    "babel-jest": "^25.3.0",
    "jest": "^25.3.0",
    "jest-extended": "^0.11.5"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "rules": {
      "quotes": [
        "error",
        "double"
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "never",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "prettier/prettier": "off"
    }
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.15"
  }
}
